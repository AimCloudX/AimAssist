                </StackPanel>
            </TabItem>
            -->
            <TabItem Header="システムのリソース利用状況">
                <StackPanel>
                    <TextBlock Name="txtHeapMemory"/>
                    <TextBlock Name="txtThreadsProcesses"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="ドライバとデバイスの状態">
                    <ScrollViewer>
                    <StackPanel>
                        <TextBlock Name="txtDriverVersions"/>
                        <TextBlock Name="txtProblemDevices"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
