<UserControl x:Class="AimAssist.Unit.Implementation.Knoledges.ModeDscriptionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AimAssist.Unit.Implementation.Knoledges"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            
        </Grid.RowDefinitions>
            <Expander Grid.Row="0" IsExpanded="True">
            <StackPanel Orientation="Vertical">
                <TextBlock Margin="5,0,0,15" Text="モードの説明"></TextBlock>
                <TextBlock Margin="5,0,0,15" x:Name="Description"></TextBlock>
            </StackPanel>
        </Expander>

        <Grid x:Name="Contents" Grid.Row="1"></Grid>
    </Grid>
</UserControl>
