<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.ComponentModel.Composition" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\AimAssist.Plugins\AimAssist.Plugins.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="UI\ClipboardList.xaml.cs">
      <SubType>Code</SubType>
    </Compile>
  </ItemGroup>
  <Target Name="CopyExtensions" AfterTargets="AfterBuild">
    <!-- DLLのコピー先を指定 -->
    <Copy SourceFiles="$(OutputPath)\ClipboardAnalyzer.dll" DestinationFolder="..\..\AimAssist\bin\Debug\net8.0-windows\Plugins" />
  </Target>
</Project>
