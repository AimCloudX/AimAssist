<UserControl x:Class="AimAssist.Units.Implementation.Terminal.TerminalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Tab Control for multiple terminals -->
        <TabControl Grid.Row="0" Grid.RowSpan="2" Name="tabControl" SelectionChanged="TabControl_SelectionChanged"/>
        
        <!-- Add Tab Menu -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,2,5,0">
            <ComboBox Name="cmbShellType" Width="160" Height="30" Margin="0,0,5,0"
                      Background="#3B4252" Foreground="#D8DEE9" BorderBrush="#4C566A">
                <!-- Items are populated dynamically in code-behind -->
            </ComboBox>
            <Button Name="btnAddTab" Content="+" 
                    Click="BtnAddTab_Click" 
                    Width="30" Height="30"
                    Background="#5E81AC" 
                    Foreground="#ECEFF4" 
                    BorderThickness="0"
                    FontSize="16"
                    FontWeight="Bold"
                    Margin="0,0,5,0"/>
            <Button Name="btnRunAsAdmin" Content="🛡" 
                    Click="BtnRunAsAdmin_Click" 
                    Width="30" Height="30"
                    Background="#BF616A" 
                    Foreground="#ECEFF4" 
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="Bold"
                    ToolTip="管理者権限でデフォルトターミナルを起動"/>
        </StackPanel>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#2E3440" Height="25">
            <StatusBarItem>
                <TextBlock Name="txtStatus" Text="ターミナル準備完了" Foreground="#D8DEE9"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>