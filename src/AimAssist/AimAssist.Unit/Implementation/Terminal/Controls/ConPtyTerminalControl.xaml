<UserControl x:Class="AimAssist.Units.Implementation.Terminal.Controls.ConPtyTerminalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
    <Grid Background="#2E3440">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Terminal Output -->
        <ScrollViewer Grid.Row="0" Name="outputScrollViewer" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Auto"
                      Background="#2E3440">
            <TextBlock Name="outputTextBlock" 
                       FontFamily="Consolas, 'Courier New', monospace"
                       FontSize="12"
                       Foreground="#D8DEE9"
                       Background="#2E3440"
                       Padding="5"
                       TextWrapping="NoWrap"/>
        </ScrollViewer>
        
        <!-- Input Area -->
        <Grid Grid.Row="1" Background="#3B4252">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                       Text=">" 
                       Foreground="#81A1C1" 
                       FontFamily="Consolas, 'Courier New', monospace"
                       FontSize="12"
                       VerticalAlignment="Center"
                       Margin="5,0"/>
            
            <TextBox Grid.Column="1"
                     Name="inputTextBox"
                     Background="Transparent"
                     Foreground="#D8DEE9"
                     BorderThickness="0"
                     FontFamily="Consolas, 'Courier New', monospace"
                     FontSize="12"
                     Padding="5"
                     KeyDown="InputTextBox_KeyDown"/>
            
            <Button Grid.Column="2"
                    Name="sendButton"
                    Content="送信"
                    Background="#5E81AC"
                    Foreground="#ECEFF4"
                    BorderThickness="0"
                    Padding="10,5"
                    Margin="5"
                    Click="SendButton_Click"/>
        </Grid>
    </Grid>
</UserControl>